        }
        else
        {
            <MudStack Row="true">
                <MudSpacer />
                <MudText Align="Align.Center">
                    My Website
                    <br />
                    <MudProgressCircular Indeterminate="true" />
                </MudText>
                <MudSpacer />
            </MudStack>
            <br />
        }
        <ShareableVideo Description="MWR Events"
                        Url="http://MakeWealthRealEvents.com"
                        Tooltip="Copied Shareable"
                        TextToCopy="http://MakeWealthRealEvents.com" />
