        <ShareableVideoMultilingual Description=@($"Precious Metals")
                                    Duration="new(0, 5, 0)"
                                    Url="https://www.ms1.megaschool.me/mwr-precious-metals"

                                    EnglishTextToCopy=@($"MWR Precious Metals{Environment.NewLine}{Environment.NewLine}Become a ratio player!{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(5min){Environment.NewLine}https://www.ms1.megaschool.me/mwr-precious-metals")
