@inherits Components.ComponentBase

<MudTooltip @bind-IsVisible="_showTooltip" ShowOnClick="false" ShowOnFocus="false" ShowOnHover="false">
    <ChildContent>
        <MudContainer @onclick="() => { _showTooltip = true; }">
            <MudChip Text="Facebook" Color="Color.Primary" Variant="Variant.Outlined" Default="true">@ChildContent</MudChip>
        </MudContainer>
    </ChildContent>
    <TooltipContent>
        <MudText @onclick="() => _showTooltip = false">@Text</MudText>
    </TooltipContent>
</MudTooltip>

@code {
    private bool _showTooltip = true;

    [Parameter]
    public string Text { get; set; }

    // [Parameter]
    // public Action? Command { get; set; }
}
